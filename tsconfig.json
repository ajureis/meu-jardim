{
	"compilerOptions": {
		// "target": "es2016",
		"target": "ESNext",

		// "module": "commonjs",
		"module": "ESNext",

		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/app/categoria/[slug]/page.tsx"
	],
	"exclude": ["node_modules"]
}
